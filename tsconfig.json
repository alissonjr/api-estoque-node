{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "app",
        "baseUrl": ".",
        "allowJs": true,
        "paths": {
            "*": [
                "src/*"
            ]
        }
        // "types" : ["node", "mysql2", "express", "body-parser"]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}